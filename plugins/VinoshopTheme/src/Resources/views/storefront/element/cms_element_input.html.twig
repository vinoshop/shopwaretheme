<div class="input-amount input-group c6"
     data-number-input-plugin="true">
    <input{% if id %} id="{{ id }}"{% endif %} class="form-control elem-number-input" min="{{ minVal }}" value="1" max="{{ maxVal }}" type="text" name="{{ name }}"{% if product_not_available %} disabled{% endif %}>
    <div class="number-control">
        <button class="btn btn-primary elem-input-number-increase" type="button"{% if product_not_available %} disabled{% endif %}
            title="Anzahl erhÃ¶hen">
            {% sw_icon 'chevron-up' style {
                namespace: 'VinoshopTheme',
                pack: 'material'
            } %}
        </button>
        <button class="btn btn-primary elem-input-number-decrease" type="button"{% if product_not_available %} disabled{% endif %}
            title="Anzahl verringern">
            {% sw_icon 'chevron-down' style {
                namespace: 'VinoshopTheme',
                pack: 'material'
            } %}
        </button>
    </div>
</div>