{% set type = type|default("text") %}

<div class="elem-input{% if classes is defined %} {{ classes }}{% endif %}"{% if type == "number" %} data-number-input-plugin{% endif %}>
    <input class="elem-input" type="{{ type }}" value="{{ default_value }}" name="{{ name }}"{% if additionally is defined %} {{ additionally }}{% endif %}/>
    {% if type == 'number' %}
        <div class="elem-input-number-controls">
            <button class="elem-input-number-increase" type="button">{% sw_icon 'chevron-up' style {
                    namespace: 'VinoshopTheme',
                    pack: 'material'
                } %}</button>
            <button class="elem-input-number-decrease" type="button">{% sw_icon 'chevron-down' style {
                    namespace: 'VinoshopTheme',
                    pack: 'material'
                } %}</button>
        </div>
    {% endif %}
</div>