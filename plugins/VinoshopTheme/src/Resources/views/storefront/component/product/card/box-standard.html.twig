{% block component_product_box %}
    {% if product %}
        {% set name = product.translated.name %}
        {% set id = product.id %}
        {% set cover = product.cover.media %}
        {% set variation = product.variation %}

        <div class="card product-box">
            {% block component_product_box_content %}
            <a href="{{ seoUrl('frontend.detail.page', {'productId': id}) }}">
                <div class="card-body">

                    {% block component_product_box_image %}
                        <div class="product-image-wrapper">
                            {% if (product.translated.customFields.vs_product_is_bio == true) %}
                                <img class="product-tag" src="{{ asset('bundles/vinoshoptheme/images/bio_icon.svg', 'asset') }}"/>
                            {% endif %}
                                {% sw_thumbnails 'product-image-th' with {
                                    media: cover,
                                    attributes: {
                                        class: 'product-image'
                                    }
                                } %}
                        </div>
                    {% endblock %}
                    {% set splitPrice = product.calculatedPrice.unitPrice|split(".") %}
                    <div class="card-info-text">
                        <p class="manufacturer"><a class="manufacturer"
                                                   href="/winzer/{{ product.manufacturer.name|lower|replace({ ' ': '-' }) }}/{{ product.manufacturer.id }}">{{ product.manufacturer.name }}</a>
                        </p>
                        {% if product.calculatedPrice.unitPrice %}
                            <p class="price">{{ "%0.2f"|format(product.calculatedPrice.unitPrice) }}</p>
                        {% else %}
                            <p class="price">{{ "%0.2f"|format(product.price.elements|first.gross) }}</p>
                        {% endif %}

                        <p class="name"><a class="name" href="/{{ product.translated.name|replace({ ' ': '-' }) }}/{{ product.productNumber }}">{{ product.translated.name }}</a></p>
                    </div>
                </div>
            </a>
            {% endblock %}
        </div>
    {% endif %}
{% endblock %}