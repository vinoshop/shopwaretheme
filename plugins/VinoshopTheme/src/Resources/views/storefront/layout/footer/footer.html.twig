{% sw_extends '@Storefront/storefront/layout/footer/footer.html.twig' %}


{% block layout_footer_inner_container %}
    <div class="footer">
        <div class="footer-inner">
            <div class="categories">
                <h3>Kategorien</h3>
                <div class="categories-list">
                    <a href="#">Weißwein</a>
                    <a href="#">Rotwein</a>
                    <a href="#">Spritzer</a>
                    <a href="#">Winzer</a>
                </div>
            </div>
            <div class="justice">
                <h3>Rechtliches</h3>
                <div class="justice-list">
                    <a href="#">AGBs</a>
                    <a href="#">Datenschutzerklärung</a>
                    <a href="#">Impressum</a>
                </div>
            </div>
            <div class="infos">
                <div class="location">
                    {% sw_icon 'map-marker-alt-solid' style {
                        namespace: 'VinoshopTheme',
                        pack: 'fontawesome'
                    } %}
                    <a href="#">1030 Wien<br>Media Quarter Marx 3.3</a>
                </div>
                <div class="email">
                    {% sw_icon 'envelope-solid' style {
                        namespace: 'VinoshopTheme',
